<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Blazor30days</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="counter" Match="NavLinkMatch.Prefix">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata" ActiveClass="aaa">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="custompage" Match="NavLinkMatch.Prefix">
                <span class="oi oi-thumb-up" aria-hidden="true"></span> CustomPage
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    class Link{
        public string Href { get; set; }
        public string Name { get; set; }
    }

    private Link[] GetLinks()
    {
        return new Link[]
        {
            new Link{
                Href = "",
                Name = "Home"
            },
             new Link{
                Href = "counter",
                Name = "Counter"
            },
              new Link{
                Href = "fetchdata",
                Name = "Fetch data"
            },
            new Link{
                Href = "custompage",
                Name = "CustomPage"
            }
        };
    }
}